<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_consulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:padding="10dp"
        android:textColor="@color/white"
        android:text="@string/marcar_consulta"
        android:layout_gravity="end"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp" />

    <LinearLayout
        android:layout_marginTop="144dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:gravity="end">

    <TextView
        android:id="@+id/text_pro_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginEnd="24dp"
        tools:text="Caio Marcelo" />

    <TextView
        android:id="@+id/text_pro_especialidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        tools:text="Psicologia"/>

    <TextView
        android:id="@+id/text_pro_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        tools:text="caio.marcelo@contato.com"/>
    </LinearLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="36dp"
        android:layout_gravity="center|bottom"
        tools:context=".ui.list.ProfessionalProfileFragment" />

</FrameLayout>